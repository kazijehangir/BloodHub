<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:orientation="horizontal"
        android:id="@+id/root_horizontal">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:id="@+id/left_vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:id="@+id/request_picture"
                android:src="@drawable/boy" />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="4dp"
            android:id="@+id/right_vertical">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/cardview_top_padding"
                android:id="@+id/name_horizontal">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_label"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:text="Name:"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_text"
                    android:layout_weight="0"
                    android:layout_gravity="right"
                    android:text="Jamshed"
                    android:textStyle="normal|bold" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/cardview_top_padding"
                android:id="@+id/needs_horizontal">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ngroup_label"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:text="Blood Group:"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bgroup_text"
                    android:layout_weight="0"
                    android:layout_gravity="right"
                    android:text="O +"
                    android:textStyle="normal|bold" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/cardview_top_padding"
                android:id="@+id/location_horizontal">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diagnosis_label"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:text="Diagnosis:"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diagnosis_text"
                    android:layout_weight="0"
                    android:layout_gravity="right"
                    android:text="Surgery"
                    android:textStyle="normal|bold" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/cardview_top_padding"
                android:id="@+id/when_horizontal">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/last_request_label"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:text="Last Request:"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/last_request_text"
                    android:layout_weight="0"
                    android:layout_gravity="right"
                    android:text="3rd December 2016"
                    android:textStyle="normal|bold" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/cardview_top_padding"
                android:id="@+id/diagnosis_horizontal">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/patient_status_label"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:text="Patient Status:"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/patient_status_text"
                    android:layout_weight="0"
                    android:layout_gravity="right"
                    android:text="Admitted"
                    android:fontFamily="sans-serif"
                    tools:layout_gravity="right"
                    android:textStyle="normal|bold" />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>
