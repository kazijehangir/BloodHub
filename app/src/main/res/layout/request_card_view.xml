<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardBackgroundColor="#000000"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/root_horizontal">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/left_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_weight="1"
                    android:id="@+id/request_picture"
                    android:src="@drawable/boy"/>
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:id="@+id/transport_horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/transport_image"
                        app:srcCompat="@drawable/ic_mood_white_24dp"
                        android:layout_weight="0"
                        android:layout_gravity="left"/>
                    <!--TODO: replace the transport icon-->
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/transport_text"
                        android:text="Available"
                        android:layout_gravity="right"
                        android:layout_weight="1"/>

                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/right_vertical">
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/name_horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/name_label"
                        android:layout_weight="0"
                        android:layout_gravity="left"
                        android:text="Name:"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/name_text"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:text="Jamshed"/>
                </android.support.v7.widget.LinearLayoutCompat>
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/needs_horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/needs_label"
                        android:layout_weight="0"
                        android:layout_gravity="left"
                        android:text="Needs:"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/needs_text"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:text="2 bags of O-"/>
                </android.support.v7.widget.LinearLayoutCompat>
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/location_horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/location_label"
                        android:layout_weight="0"
                        android:layout_gravity="left"
                        android:text="Location:"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/location_text"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:text="National Hospital"/>
                </android.support.v7.widget.LinearLayoutCompat>
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/when_horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/when_label"
                        android:layout_weight="0"
                        android:layout_gravity="left"
                        android:text="When:"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/when_text"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:text="URGENT"/>
                </android.support.v7.widget.LinearLayoutCompat>
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/diagnosis_horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/diagnosis_label"
                        android:layout_weight="0"
                        android:layout_gravity="left"
                        android:text="Diagnosis:"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/diagnosis_text"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:text="Surgery"/>
                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>
