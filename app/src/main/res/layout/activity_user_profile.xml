<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jexapps.bloodhub.UserProfile"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/image1"
        android:src="@drawable/red_crescent"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/name"
        android:layout_toLeftOf="@+id/name" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Name: Aimen Gaba"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="10dp"
        android:text="Age: 20"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blood_g"
        android:layout_below="@+id/age"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="10dp"
        android:text="Blood Group: A+"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/con_num"
        android:layout_below="@+id/blood_g"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="10dp"
        android:text="Contact No: 0399-3948004"
        android:textSize="20sp" />


</RelativeLayout>
