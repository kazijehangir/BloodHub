<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    tools:context="com.jexapps.bloodhub.UserProfile">

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:text="Age: 20"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/blood_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/age"
        android:layout_marginTop="10dp"
        android:text="Blood Group: A+"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/con_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/blood_g"
        android:layout_marginTop="10dp"
        android:text="Contact No: 039994804"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/name"
        android:layout_toStartOf="@+id/name"
        android:layout_alignParentLeft="true"
        android:src="@drawable/red_crescent"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/edit_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_alignTop="@+id/con_num"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:text="Name: Aimen Gaba"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/don_info"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donation Info"
        android:layout_below="@+id/imageButton1"
        android:layout_alignRight="@+id/edit_pro"
        android:layout_alignEnd="@+id/edit_pro"
        android:textSize="18sp"
        android:textColor="@color/fab1"
        android:id="@+id/textView2" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/req_info"
        android:layout_above="@+id/textView2"
        android:layout_alignRight="@+id/con_num"
        android:layout_alignEnd="@+id/con_num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requests Info"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:textColor="@color/fab1"
        android:textSize="18sp"
        android:id="@+id/textView4" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/health_info"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Info"
        android:layout_alignRight="@+id/image1"
        android:layout_alignEnd="@+id/image1"
        android:textSize="18sp"
        android:textColor="@color/fab1"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageButton3" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/more_info"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Info"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:textColor="@color/fab1"
        android:textSize="18sp"
        />


</RelativeLayout>
